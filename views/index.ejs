<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/home.css">
    <title>Task Manager</title>
</head>
<body>
    <div class="bg-dark text-light vh-100">

        <div class="d-flex align-items-center justify-content-between">
            <h1 class="d-inline display-3 lead pt-2 ps-5 text-center">Task Manager</h1>
            <a href="/logout" type="submit" class="d-inline float-right btn btn-outline-danger py-2 px-4 mx-4">Logout</a>    
        </div>
        <!-- <h1 class="d-inline display-3 lead pt-2 ps-5 text-center">Task Manager</h1> -->
        <!-- <button type="submit" class="d-inline float-right btn btn-outline-light py-2 px-4">Logout</button> -->
        <!-- <a href="" type="submit" class="d-inline float-right btn btn-outline-light py-2 px-4">Logout</a> -->
        <div>
            <form method="post" class="d-flex align-items-center justify-content-center">
                <input class="form-control w-25 m-5" type="text" name="task" placeholder="What's it gonna be">
                <button type="submit" class="btn btn-outline-light py-2 px-4">Add</button>
            </form>
        </div>

        <div class="m-5 d-flex flex-column align-items-center justify-content-around">
            <ul class="lst-main">
                <% tasks.forEach(task => { %>
                <li class="d-flex align-items-center justify-content-between my-2 px-4 py-2 lst">
                    <span class="h3"><%= task.task %></span>
                    <span>
                        <a href="/edit/<%= task._id %>"><i class="bi bi-pencil-square btn btn-outline-warning"></i></a>
                        <a href="/delete/<%= task._id %>" class="mx-1"><i class="bi bi-x-circle-fill btn btn-outline-danger"></i></a>
                    </span>
                </li>
                <% }) %>
            </ul>
        </div>

    </div>
</body>
</html>