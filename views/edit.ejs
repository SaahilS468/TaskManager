<body>
    <div class="bg-dark text-light vh-100">

        <h1 class="display-3 lead pt-2 ps-5 text-center">Task Manager</h1>
        <div>
            <form method="post" class="d-flex align-items-center justify-content-center">
                <input class="form-control w-25 m-5" type="text" name="task"  placeholder="What's it gonna be">
                <button type="submit" class="btn btn-outline-light py-2 px-4">Edit</button>
                <a href="/" class="btn btn-outline-light py-2 px-4 mx-2">Back</a>
            </form>
        </div>

    </div>
